<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom dark shadow with a slight offset (creates depth at bottom/right) -->
    <item android:bottom="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/nm_dark_shadow" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Top light shadow with a negative offset (creates highlight at top/left) -->
    <item android:top="4dp" android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/nm_light_shadow" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Main background layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/nm_background" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
